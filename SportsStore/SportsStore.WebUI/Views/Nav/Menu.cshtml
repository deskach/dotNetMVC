@model IEnumerable<string>

@{ 
    var btnPrimary = ViewBag.selectedCategory == null ? " btn-primary" : "";

    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" + btnPrimary });
}


@foreach (var link in Model) {
    @Html.RouteLink(link, new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
    }, new {
        @class = "btn btn-block btn-default btn-lg " 
            + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}
