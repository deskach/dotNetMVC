@model IEnumerable<string>

<div id="menuHorizontal" class="btn-group btn-group-sm btn-group-justified">
    @{
        var btnPrimary = ViewBag.selectedCategory == null ? " btn-primary" : "";

        @Html.ActionLink("All", "List", "Product", null, new { @class = "btn btn-default btn-sm" + btnPrimary });
    }


    @foreach (var link in Model) {
        @Html.RouteLink(link, new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new {
            @class = "btn btn-default btn-sm "
                        + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
    }
</div>